<h2>Search for Blogs</h2>
<form action="/results" method="get">
  <div class="input-group mb-3">
    <input
      type="search"
      class="form-control"
      placeholder="issue 1"
      value="<%=searchOpts.blogTitle%>"
      name="blogTitle"
      aria-label="Recipient's username"
      aria-describedby="button-addon2"
    />
    <div class="input-group-append">
      <button
        class="btn btn-outline-secondary"
        type="submit"
        id="button-addon2"
      >
        Search
      </button>
    </div>
  </div>
</form>

<div class="blog-content d-flex flex-wrap">
  <% blogs.forEach(blog => { %>
  <div class="card flex-fill m-2" style="max-width: 18rem">
    <img src="<%=blog.blogPostCI[0].url %>" class="card-img-top" alt="..." />
    <div class="card-body">
      <h5 class="card-title"><%= blog.title %></h5>
      <p class="card-text"><%= blog.snippet %></p>
      <a class="btn btn-dark" href="/<%= blog.slug %>" class="btn btn-primary"
        >view</a
      >
    </div>
  </div>
  <% }) %>
</div>

<div class="blog-pagination">
  <div class="pagination">
    <!-- check if user is at the first page -->
    <% if (currentPage == 1 && totalPages > 1) { %>
    <a class="btn btn-dark m-2" href="/page/<%= parseInt(currentPage) + 1 %>/"
      ><span>
        Page <%= parseInt(currentPage) + 1 %>
        <i class="fa fa-arrow-right"></i>
      </span>
    </a>
    <!-- check if user is at between the first and last page -->
    <% } else if (currentPage < totalPages) { %>
    <a class="btn btn-dark m-2" href="/page/<%= parseInt(currentPage) - 1 %>/"
      ><span>
        <i class="fa fa-arrow-left"></i>
        Page <%= parseInt(currentPage) - 1 %>
      </span>
    </a>
    <a class="btn btn-dark m-2" href="/page/<%= parseInt(currentPage) + 1 %>/"
      ><span>
        Page <%= parseInt(currentPage) + 1 %>
        <i class="fa fa-arrow-right"></i>
      </span>
    </a>
    <!-- check if user is at the last page -->
    <% } else if (currentPage == totalPages && totalPages > 1) { %>
    <a class="btn btn-dark m-2" href="/page/<%= parseInt(currentPage) - 1 %>/"
      ><span>
        <i class="fa fa-arrow-left"></i>
        Page <%=parseInt(currentPage) - 1 %>
      </span>
    </a>
    <% } %>
  </div>
</div>
