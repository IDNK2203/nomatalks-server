<%- include("./partials/_slider.ejs")%>

<section class="posts">
  <div class="container-custom con-xl">
    <main class="main">
      <% if (mostRecentBlogs.length > 0){ %> <% blogsFound.forEach(blog => { %>
      <div class="posts-heading">
        <h2 class="posts__headline">Latest Posts</h2>
      </div>
      <div class="blog-post-holder">
        <ul class="post-list">
          <li class="post-list__item">
            <a href="/<%= blog.slug %>">
              <div
                class="post-list__img-holder"
                style="background-image: url('<%=blog.blogPostCI[0].url %>')"
              ></div>
              <div class="post-list__description">
                <small class="post-list__category">
                  <%= blog.category %>
                </small>
                <h3 class="post-list__title"><%= blog.title %></h3>
                <p class="post-list__snippet"><%= blog.snippet %></p>
                <small class="post-list__publishedAt">
                  <%= formatDate(blog.publishedAt, 'MMM Do YY') %>
                </small>
                <small class="post-list__ert mx-2"
                  ><%= blog.estReadTime %></small
                >
              </div>
            </a>
          </li>

          <% }) %> <% } %>
        </ul>
      </div>
    </main>

    <%- include("./partials/_pagination.ejs")%>
  </div>
</section>
<%-include("./partials/_newsletter.ejs")%>
